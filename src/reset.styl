*
  &, &:before, &:after
    background-repeat no-repeat
    box-sizing border-box
  
  &:focus
    outline none
  
  &:first-child
    margin-top 0 !important
  
  &:last-child
    margin-bottom 0 !important
    
html
body
  width 100%
  height 100%
  margin 0
  padding 0
  
textarea
select
button
input
  font-family inherit
  
input[type=checkbox]
input[type=radio]
input[type=submit]
input[type=reset]
input[type=file]
button
  cursor pointer
  
  &[disabled]
    cursor default
    
input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
  -webkit-appearance none

input[type=datetime]
input[type=month]
input[type=week]
input[type=date]
input[type=time]
input[type=number]
  -moz-appearance textfield
    
textarea
  display block
  resize vertical
    
table
  border-collapse collapse
  border-spacing 0
  width 100%
  
img
  max-width 100%
  
ul
ol
  &[role=navigation]
    list-style none
    margin 0
    padding 0
  
blockquote
q
  quotes none
  margin-left 0
  margin-right 0